// Append new data
$("<%=j render(:object => @article) %>")
  .appendTo($(".infinite-table table"));

// Update pagination link
<% if @article.last_page? %>
  $('.pagination').html("There are no more articles!");
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@article, 'Next Page', :remote => true) %>");
<% end %>