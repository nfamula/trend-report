<%= render "nav_bar" %>


<section class="hero" id="hero">
<div class="container">

    <div class="row" id="articles-page-content">

        <div class="col-lg-12">
            <h1 class="animated fadeInDown" align="center">Men's Fashion</h1>
            <br /><br /><br />
        </div>

        <% @article.each do |article| %>
            <% if article.category == "mfashion" %>
                <!--<div class="col-lg-3 col-md-4 col-xs-6 thumb">-->
                <div class="col-xs-3 thumb-men">
                    <a class="thumbnail" href="<%= article.url %>" target="blank">
                        <img class="img-responsive" src="<%= article.image %>" alt="">
                    </a>
                    <h4 style="color:black"><%= article.title %></h4>
                    <h4>Source: <%= article.source %></h4>
                </div>
            <% end %>
        <% end %>

    </div>

    <hr>

</div>
</section>
